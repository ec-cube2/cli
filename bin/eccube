#!/usr/bin/env php
<?php
set_time_limit(0);

require dirname(__FILE__).'/../src/bootstrap.php';

use Symfony\Component\Console\Application;
use Eccube2\Command\ModuleListCommand;
use Eccube2\Command\ModuleInstallCommand;
use Eccube2\Command\ModuleUpdateCommand;
use Eccube2\Command\ModuleUninstallCommand;
use Eccube2\Command\PluginListCommand;
use Eccube2\Command\PluginInstallCommand;
use Eccube2\Command\PluginUpdateCommand;
use Eccube2\Command\PluginUninstallCommand;
use Eccube2\Command\PluginEnableCommand;
use Eccube2\Command\PluginDisableCommand;

$app = new Application();
$app->addCommands(array(
    new ModuleListCommand(ModuleListCommand::$defaultName),
    new ModuleInstallCommand(ModuleInstallCommand::$defaultName),
    new ModuleUpdateCommand(ModuleUpdateCommand::$defaultName),
    new ModuleUninstallCommand(ModuleUninstallCommand::$defaultName),
    new PluginListCommand(PluginListCommand::$defaultName),
    new PluginInstallCommand(PluginInstallCommand::$defaultName),
    new PluginUpdateCommand(PluginUpdateCommand::$defaultName),
    new PluginUninstallCommand(PluginUninstallCommand::$defaultName),
    new PluginEnableCommand(PluginEnableCommand::$defaultName),
    new PluginDisableCommand(PluginDisableCommand::$defaultName),
));
$app->run();
